[
    {
      "group": "admin",
      "permissions": [
        {
          "resource": "*",
          "methods": "*",
          "action": "allow"
        }
      ]
    },
    {
      "group": "manager",
      "permissions": [
        {
          "resource": "products/*",
          "methods": ["GET", "PUT", "POST"],
          "action": "allow"
        },
        {
          "resource": "orders/*",
          "methods": ["GET", "PUT", "POST"],
          "action": "allow"
        }
      ]
    },
    {
      "group": "user",
      "permissions": [
        {
          "resource": "products/*",
          "methods": ["POST", "PUT", "DELETE"],
          "action": "deny"
        }
      ]
    }
  ]